
<SCENE>

<INITIALS>
    <frustum near="2" far="500"/>                      <!-- frustum planes -->
    <translation x="-100" y="-40" z="-30"/>                 <!-- initial translate -->
    <rotation axis="x" angle="20"/>                  <!-- initial rotation 3 -->
    <rotation axis="y" angle="40"/>                  <!-- initial rotation 2 -->
    <rotation axis="z" angle="-25"/>                    <!-- initial rotation 1 -->
    <scale sx="1" sy="1" sz="1"/>                     <!-- initial scaling -->
    <reference length="5"/>                           <!-- axis length, "0" means no axis -->
</INITIALS>


<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1"/>          <!-- global ambient -->
    <background r="0" g="0" b="0" a="1"/>             <!-- background color -->
</ILLUMINATION>


<LIGHTS>
    <LIGHT id="headlight">                               <!-- light identifier -->
        <enable value ="1"/>         				  <!-- enable/disable -->
        <position x="4.8" y="8.6" z="4.8" w="1"/>           <!-- light position -->
        <ambient r="0.4" g="0.4" b="0.4" a="1"/>            <!-- ambient component -->
        <diffuse r="0.4" g="0.4" b="0.4" a="1"/>  		  <!-- diffuse component -->
        <specular r="0.5" g="0.5" b="0.5" a="1"/>       	  <!-- specular component -->
    </LIGHT>
    <LIGHT id="moonlight">                               <!-- light identifier -->
        <enable value ="1"/>         				  <!-- enable/disable -->
        <position x="-45" y="40" z="0" w="1"/>           <!-- light position -->
        <ambient r="0.4" g="0.4" b="0.4" a="1"/>            <!-- ambient component -->
        <diffuse r="0.4" g="0.4" b="0.4" a="1"/>  		  <!-- diffuse component -->
        <specular r="0.8" g="0.8" b="0.8" a="1"/>       	  <!-- specular component -->
    </LIGHT>
	<!-- NOTE: this block "LIGHT" must be repeated as necessary with different "id" -->
</LIGHTS>


<TEXTURES>
    <TEXTURE id="yellow">
        <file path="textures/yellow.jpg"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <TEXTURE id="blackmetal">
        <file path="textures/blackmetal.jpg"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <TEXTURE id="smiley">
        <file path="textures/smiley.jpg"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <TEXTURE id="chess">
        <file path="textures/chess.png"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <TEXTURE id="pattern2">
        <file path="textures/pattern2.png"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <TEXTURE id="blue">
        <file path="textures/blue.jpg"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <TEXTURE id="bluefloor">
        <file path="textures/floor.jpg"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <TEXTURE id="moontext">
        <file path="textures/moon.jpg"/>      <!-- path to file -->
        <amplif_factor s="1" t="1"/>              	   <!-- x/s, y/t -->
    </TEXTURE>
    <!-- NOTE: this block "TEXTURE" must be repeated as necessary with different "id" -->   
</TEXTURES>


<MATERIALS>
    <MATERIAL id="default">                                  
        <shininess value="1"/>
        <specular r="1" g="1" b="1" a="1"/>            <!-- specular reflection -->
        <diffuse r="1" g="1" b="1" a="1"/>             <!-- diffuse reflection -->
        <ambient r="1" g="1" b="1" a="1"/>             <!-- ambient reflection -->
        <emission r="0" g="0" b="0" a="1"/>            <!-- emission component -->
    </MATERIAL>
    <MATERIAL id="branco">                                  
        <shininess value="1"/>
        <specular r="1" g="1" b="1" a="1"/>            <!-- specular reflection -->
        <diffuse r="1" g="1" b="1" a="1"/>             <!-- diffuse reflection -->
        <ambient r="1" g="1" b="1" a="1"/>             <!-- ambient reflection -->
        <emission r="1" g="1" b="1" a="1"/>            <!-- emission component -->
    </MATERIAL>
    <!-- NOTE: the "MATERIAL" block may be repeated as required. Each defined material requires a distinct "id" -->
</MATERIALS>


<LEAVES>
    <!-- next lines define nodes of type leaf; they may be repeated, in any order, as necessary -->
    <LEAF id="square" type="rectangle" args="-0.5 0.5 0.5 -0.5"/>
    <LEAF id="rectangle" type="rectangle" args="-1 0.5 1 -0.5"/>
    <LEAF id="cylinder" type="cylinder" args="1 1 1 16 16"/> 
    <LEAF id="cone" type="cylinder" args="1 0.5 1 16 16"/> 
    <LEAF id="sphere" type="sphere" args="1 16 16"/>
    <LEAF id="triangle" type="triangle" args="0 0 0 1 0 0 0 1 0"/>
    <!-- Parameters of the above primitives: -->
        <!-- rectangle: 2D coordinates for left-top and right-bottom vertices -->
        <!-- cylinder: height, bottom radius, top radius, sections along height, parts per section -->
        <!-- sphere: radius, parts along radius, parts per section -->
        <!-- triangle: coordinates of each vertex -->
</LEAVES>


<NODES>

    <ROOT id="scene"/>   	<!-- identifier of root node of the scene graph; this node -->
                         	<!-- must be defined in one of the following NODE declarations -->

    <NODE id="scene">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="floor"/>
            <DESCENDANT id="wall"/>
            <DESCENDANT id="monster"/>
            <DESCENDANT id="moon"/>
        </DESCENDANTS>
    </NODE>
    
    <NODE id="floor">
        <MATERIAL id="default"/>
        <TEXTURE id="bluefloor"/>
        <TRANSLATION x="3.3" y="0" z="3.3"/>
        <ROTATION axis="y" angle="45"/>
        <ROTATION axis="x" angle="-90"/>
        <SCALE sx="65" sy="80" sz="1"/>
		<DESCENDANTS>
            <DESCENDANT id="rectangle"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="wall">
        <MATERIAL id="default"/>
        <TEXTURE id="blue"/>
        <TRANSLATION x="-25" y="25" z="-25"/>
        <ROTATION axis="y" angle="45"/>
        <SCALE sx="65" sy="50" sz="1"/>
		<DESCENDANTS>
            <DESCENDANT id="rectangle"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="moon">
        <MATERIAL id="branco"/>
        <TEXTURE id="moontext"/>
        <TRANSLATION x="-45" y="40" z="0"/>
        <SCALE sx="3" sy="3" sz="3"/>
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="monster">    	<!-- defines one intermediate node; may be repeated as necessary -->

        <!-- next two lines are mandatory -->
        <MATERIAL id="null"/>      			<!-- declared material superimposes the material received from parent node -->
                                  	  		<!-- id="null" maintains material from parent node -->
        <TEXTURE id="null"/>        		<!-- declared texture superimposes the texture received from parent node -->
                                  	  		<!-- id="null" maintains texture from parent node -->
                                  	  		<!-- id="clear" clears texture declaration received from parent node -->

        <!-- geometric transformations are optional and may be repeated, in any order, as necessary-->
        <TRANSLATION x="4" y="6" z="4"/>
        <!--<ROTATION axis="cc" angle="ff"/>-->
        <SCALE sx="2" sy="2" sz="2"/>

        <!-- declaring descendants, ate least one node or one leaf must be present -->
        <DESCENDANTS>
            <DESCENDANT id="head"/>        	<!-- "ss" is the identifier of a node or of leaf -->
                                         	<!-- may be repeated as necessary. It can refer an -->
                                         	<!-- identifier of another node or leaf, later defined in the lsx file. -->
			<DESCENDANT id="body"/>
			<DESCENDANT id="legs"/>
			<DESCENDANT id="arms"/>
        </DESCENDANTS>

    </NODE>
	

    <NODE id="head">
        <MATERIAL id="default"/>
        <TEXTURE id="blackmetal"/>
        <TRANSLATION x="0.8" y="6.2" z="0.8"/>        
		<DESCENDANTS>
            <DESCENDANT id="back_head"/>
            <DESCENDANT id="middle_head"/>
            <DESCENDANT id="front_head"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="back_head">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="-1.2" y="0" z="-1.2"/>        
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>
        </DESCENDANTS>
    </NODE>
	
    <NODE id="middle_head">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="ears"/>
            <DESCENDANT id="skull"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="ears">
        <MATERIAL id="null"/>
        <TEXTURE id="pattern2"/>
		<DESCENDANTS>
            <DESCENDANT id="left_ear"/>
            <DESCENDANT id="right_ear"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="left_ear">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <ROTATION axis="z" angle="-30"/>
        <TRANSLATION x="-1.4" y="0" z="0"/>        
		<DESCENDANTS>
            <DESCENDANT id="ear"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="right_ear">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <ROTATION axis="x" angle="30"/>
        <TRANSLATION x="0" y="0" z="-1.4"/>        
		<DESCENDANTS>
            <DESCENDANT id="ear"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="ear">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <SCALE sx="0.5" sy="0.5" sz="0.5"/>
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="skull">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="-1.5" y="0" z="-1.5"/>        
        <ROTATION axis="y" angle="45"/>
        <SCALE sx="1.8" sy="1.8" sz="2.2"/>
		<DESCENDANTS>
            <DESCENDANT id="cone"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="front_head">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="face"/>
            <DESCENDANT id="hat"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="face">
        <MATERIAL id="branco"/>
        <TEXTURE id="smiley"/>
        <ROTATION axis="y" angle="135"/>
        <SCALE sx="0.4" sy="1.6" sz="1.6"/>
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="hat">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <ROTATION axis="y" angle="45"/>
        <SCALE sx="1.8" sy="1.8" sz="0.9"/>
		<DESCENDANTS>
            <DESCENDANT id="cylinder"/>
        </DESCENDANTS>
    </NODE>
	
    <NODE id="body">
        <MATERIAL id="default"/>
        <TEXTURE id="pattern2"/>
		<DESCENDANTS>
            <DESCENDANT id="neck"/>	
            <DESCENDANT id="upper_body"/>	
            <DESCENDANT id="lower_body"/>	
        </DESCENDANTS>
    </NODE>

    <NODE id="neck">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="0" y="4.4" z="0"/>        
        <ROTATION axis="y" angle="0"/>
        <ROTATION axis="x" angle="-90"/>
        <SCALE sx="0.5" sy="0.5" sz="0.7"/>
		<DESCENDANTS>
            <DESCENDANT id="cylinder"/>	
        </DESCENDANTS>
    </NODE>

    <NODE id="upper_body">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="0" y="2.5" z="0"/>        
        <SCALE sx="2" sy="2" sz="2"/>
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>	
        </DESCENDANTS>
    </NODE>

    <NODE id="lower_body">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <SCALE sx="3" sy="3" sz="3"/>
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>	
        </DESCENDANTS>
    </NODE>

    <NODE id="legs">
        <MATERIAL id="default"/>
        <TEXTURE id="chess"/>
		<DESCENDANTS>
            <DESCENDANT id="left_leg"/>
            <DESCENDANT id="right_leg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="left_leg">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="0" y="-2.2" z="5"/>        
        <ROTATION axis="y" angle="180"/>
		<DESCENDANTS>
            <DESCENDANT id="leg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="right_leg">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="5" y="-2.2" z="0"/>        
        <ROTATION axis="y" angle="-90"/>
		<DESCENDANTS>
            <DESCENDANT id="leg"/>
        </DESCENDANTS>
    </NODE>
	
    <NODE id="leg">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="foot"/>
            <DESCENDANT id="actual_leg"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="foot">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="0" y="0.4" z="0"/>        
        <SCALE sx="0.8" sy="1.2" sz="0.8"/>
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="actual_leg">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <SCALE sx="0.7" sy="0.7" sz="4.2"/>
		<DESCENDANTS>
            <DESCENDANT id="cylinder"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="arms">
        <MATERIAL id="default"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="left_arm"/>
            <DESCENDANT id="right_arm"/>
        </DESCENDANTS>
    </NODE>
	
    <NODE id="left_arm">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="0.5" y="3.5" z="3.5"/>        
        <ROTATION axis="y" angle="200"/>
		<DESCENDANTS>
            <DESCENDANT id="arm"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="right_arm">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
        <TRANSLATION x="3.5" y="3.5" z="0.5"/>        
        <ROTATION axis="y" angle="-110"/>
		<DESCENDANTS>
            <DESCENDANT id="arm"/>
        </DESCENDANTS>
    </NODE>
	
    <NODE id="arm">
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="hand"/>
            <DESCENDANT id="actual_arm"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="hand">
        <MATERIAL id="null"/>
        <TEXTURE id="yellow"/>
        <TRANSLATION x="0" y="0.3" z="0"/>        
        <SCALE sx="0.6" sy="0.8" sz="0.6"/>
		<DESCENDANTS>
            <DESCENDANT id="sphere"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="actual_arm">
        <MATERIAL id="null"/>
        <TEXTURE id="chess"/>
        <SCALE sx="0.5" sy="0.5" sz="3"/>
		<DESCENDANTS>
            <DESCENDANT id="cylinder"/>
        </DESCENDANTS>
    </NODE>

</NODES>


</SCENE>
