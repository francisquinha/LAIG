		<DESCENDANTS>
            <DESCENDANT id="cylinder"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="front_head"> <!-- no quadrante negativo, material branco, textura world, redefinidos nas faces -->
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="face"/>
            <DESCENDANT id="hat"/>
        </DESCENDANTS>
    </NODE>

    <NODE id="face"> <!-- no quadrante negativo, material branco, textura world, redefinidos nas faces -->
