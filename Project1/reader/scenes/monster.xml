    </NODE>
	
    <NODE id="body"> <!-- no quadrante positivo, sem material, sem textura -->
        <MATERIAL id="null"/>
        <TEXTURE id="null"/>
		<DESCENDANTS>
            <DESCENDANT id="neck"/>	
            <DESCENDANT id="upper_body"/>	
            <DESCENDANT id="lower_body"/>	
